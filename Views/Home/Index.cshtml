

@model IEnumerable<EntityFrameworkBooksAPP.Models.Book>

@{
    ViewBag.Title = "Home Page";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","Books",null,null)
</p>
@using (Html.BeginForm())
{
    <p>
        Find by Name/Author: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.Name)

        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)

            </td>
            
            <td>
               
                @Html.ActionLink("Details", "Details","Books", new { id = item.BookID }, null) 
                
            </td>
        </tr>
    }

</table>

